<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

    <body>
        <div class="arrier">
            <div class="content">
                <%- include('partials/header') %>
                    <%- include('partials/navigator') %>

                        <main>
                            <h1>Add Vehicle</h1>

                            <% if (messages.error) { %>
                                <div class="error">
                                    <%= messages.error %>
                                </div>
                                <% } %>

                                    <form action="/inv/add-inventory" method="POST" novalidate>
                                        <label for="classification_id">Classification <span
                                                class="required">*</span></label>
                                        <%= classificationSelect %>

                                            <label for="inv_make">Make <span class="required">*</span></label>
                                            <input type="text" id="inv_make" name="inv_make" required
                                                value="<%= sticky.inv_make || '' %>">

                                            <label for="inv_model">Model <span class="required">*</span></label>
                                            <input type="text" id="inv_model" name="inv_model" required
                                                value="<%= sticky.inv_model || '' %>">

                                            <label for="inv_year">Year <span class="required">*</span> (e.g.,
                                                2021)</label>
                                            <input type="number" id="inv_year" name="inv_year" required min="1900"
                                                max="2099" step="1" value="<%= sticky.inv_year || '' %>">

                                            <label for="inv_description">Description <span
                                                    class="required">*</span></label>
                                            <textarea id="inv_description" name="inv_description"
                                                required><%= sticky.inv_description || '' %></textarea>

                                            <label for="inv_image">Image Path <span class="required">*</span></label>
                                            <input type="text" id="inv_image" name="inv_image" required
                                                value="<%= sticky.inv_image || '' %>">

                                            <label for="inv_thumbnail">Thumbnail Path <span
                                                    class="required">*</span></label>
                                            <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
                                                value="<%= sticky.inv_thumbnail || '' %>">

                                            <label for="inv_price">Price ($) <span class="required">*</span></label>
                                            <input type="number" id="inv_price" name="inv_price" required min="0"
                                                step="0.01" value="<%= sticky.inv_price || '' %>">

                                            <label for="inv_miles">Miles <span class="required">*</span></label>
                                            <input type="number" id="inv_miles" name="inv_miles" required min="0"
                                                step="1" value="<%= sticky.inv_miles || '' %>">

                                            <label for="inv_color">Color <span class="required">*</span></label>
                                            <input type="text" id="inv_color" name="inv_color" required
                                                value="<%= sticky.inv_color || '' %>">

                                            <button type="submit">Add Vehicle</button>
                                    </form>
                        </main>

                        <%- include('partials/footers') %>
            </div>
        </div>
    </body>

</html>